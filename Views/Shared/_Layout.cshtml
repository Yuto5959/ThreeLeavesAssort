<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/top.css" />
</head>
<body>
    <div class="container">
        <!-- ヘッダー -->
        <header>
            <div class="logo">ThreeLeavesAssort</div>
            <button class="menu-toggle">≡</button>
        </header>

        <!-- メニュー（Expand形式） -->
        <nav class="menu" id="menu">
            <ul>
                <li><a href="#notice">注意事項</a></li>
                <li><a asp-controller="Home" asp-action="PenName">ペンネーム登録</a></li>
                <li><a asp-controller="Home" asp-action="Favorites">お気に入り10選</a></li>
                <li><a href="#origin">元ネタ紹介</a></li>
                <li><a href="#terms">利用規約</a></li>
                <li><a href="#help">ヘルプ</a></li>
                <li><a asp-controller="Home" asp-action="Contact">お問い合わせ</a></li>
            </ul>
        </nav>

        <!-- コンテンツ -->
        @RenderBody()

        <!-- フッター（ナビゲーションバー） -->
        <footer>
            <nav class="nav-bar">
                <a asp-controller="Home" asp-action="Top" class="active">トップ</a>
                <a asp-controller="Home" asp-action="Scrap">スクラップ帳</a>
                <a asp-controller="Home" asp-action="Works">みんなの作品</a>
            </nav>
        </footer>
    </div>

    <script src="~/js/top.js"></script>
</body>
</html>