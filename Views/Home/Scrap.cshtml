@{
    ViewData["Title"] = "スクラップ帳";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main class="scrap-page">
    <div class="content">
        <h1>スクラップ帳</h1>

        <!-- キャンバスエリア -->
        <div class="canvas-container">
            <canvas id="scrapCanvas" width="300" height="200"></canvas>
        </div>

        <!-- 入力および設定エリア -->
        <div class="input-area">
            <div class="input-group">
                <label for="textInput">文字テキスト:</label>
                <input type="text" id="textInput" maxlength="9" placeholder="最大9文字" style="width: 140px;" />
                <label for="textLength" style="width: 80px;">文字数:</label>
                <input type="number" id="textLength" min="4" max="9" value="4" step="1" style="width: 50px;" />
            </div>
            <div class="template-panel">
                <div class="template-group">
                    <h3>見出し</h3>
                    <div class="template-item" data-template="headline">大見出し</div>
                    <div class="template-item" data-template="subhead">中見出し</div>
                    <div class="template-item" data-template="smallhead">小見出し</div>
                </div>
                <div class="template-group">
                    <h3>本文</h3>
                    <div class="template-item" data-template="body1">新聞</div>
                    <div class="template-item" data-template="body2">白文書</div>
                    <div class="template-item" data-template="body3">小説</div>
                </div>
                <div class="template-group">
                    <h3>広告</h3>
                    <div class="template-item" data-template="ad1">広告１</div>
                    <div class="template-item" data-template="ad2">広告２</div>
                    <div class="template-item" data-template="ad3">広告３</div>
                </div>
                <div class="template-group">
                    <h3>特殊</h3>
                    <div class="template-item" data-template="pop">ポップ</div>
                    <div class="template-item" data-template="horror">ホラー</div>
                    <div class="template-item" data-template="textbook">教科書</div>
                </div>
            </div>
            <div class="orientation-panel">
                <div class="orientation-group">
                    <h3>テキスト方向</h3>
                    <div class="orientation-item" data-orientation="horizontal">
                        <span>横書き</span>
                    </div>
                    <div class="orientation-item" data-orientation="vertical">
                        <span>縦書き</span>
                    </div>
                </div>
            </div>
            <div class="button-group">
                <button id="registerButton" class="register-btn" disabled>登録</button>
            </div>
        </div>
    </div>
</main>

@section Styles {
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Sawarabi+Mincho&display=swap" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Noto+Serif+JP&display=swap" /> <!-- 教科書用フリーフォント -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Creepster&display=swap" /> <!-- ホラー用フリーフォント -->
    <link rel="stylesheet" href="~/css/top.css" />
    <link rel="stylesheet" href="~/css/scrap.css" />
}

@section Scripts {
    <script src="~/js/scrap.js"></script>
}